@model WebApplication2.ViewModels.ProfileViewModel

<form asp-action="Profile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <!-- Diğer alanlar buraya eklenir -->
    <div class="form-group">
        <label asp-for="ProfilePictureFile"></label>
        <input asp-for="ProfilePictureFile" type="file" class="form-control" />
        <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>
